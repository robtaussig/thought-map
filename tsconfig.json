{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react",
    "paths": {
      "~*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}